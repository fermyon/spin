interface observe {
  resource span {
    /// enter returns a new span with the given name.
    enter: static func(name: string) -> span;

    /// set-attribute sets an attribute on the span.
    set-attribute: func(key: string, value: string);

    /// close closes the span.
    close: func();
  }
}

