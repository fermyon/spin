{
    // This ignores the Go errors from the SDK and examples.
    // Without this, the problems pane is filled with errors 
    // due to multiple Go module workspaces and CGO issues.
    //
    // To work on those parts of the project, open them in their 
    // VS Code workspace.
    "gopls": {
        "build.directoryFilters": [
            "-sdk",
            "-examples",
            "-templates"
        ],
    },
    "rust-analyzer.files.excludeDirs": [
        "templates"
    ],
    "rust-analyzer.linkedProjects": [
        "./Cargo.toml",
        "./tests/test-components/components/Cargo.toml"
    ]
}
